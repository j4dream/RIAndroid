<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:j4dream="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.j4dream.riandroid.view.SildingMenu
        android:id="@+id/id_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        j4dream:rightPadding="100dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <com.j4dream.riandroid.view.DBList
                android:id="@+id/db_list_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.j4dream.riandroid.view.DBList>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_bg"
                >
                <include layout="@layout/top_bar"
                    ></include>
            </LinearLayout>
        </LinearLayout>

    </com.j4dream.riandroid.view.SildingMenu>
</RelativeLayout>
